<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    >

    <TextView
        android:id="@+id/signup_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gillsansb"
        android:text="Sign Up"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/signup_un"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:fontFamily="@font/gillsans"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#FFF"
        />

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:layout_gravity="center"
        android:fontFamily="@font/gillsans"
        android:backgroundTint="#FFF"
        android:layout_marginBottom="10dp"

        />

    <TextView
        android:id="@+id/signup_pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/gillsans"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#FFF"
        />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:fontFamily="@font/gillsans"
        android:inputType="textPassword"

        />
    <TextView
        android:id="@+id/signup_fn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:fontFamily="@font/gillsans"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#FFF"
        />

    <EditText
        android:id="@+id/signup_fullname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:fontFamily="@font/gillsans"
        android:inputType="text"

        />
    <TextView
        android:id="@+id/signup_bd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:fontFamily="@font/gillsans"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#FFF"
        />

    <EditText
        android:id="@+id/signup_birthday"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:fontFamily="@font/gillsans"
        android:inputType="date"

        />
    <TextView
        android:id="@+id/signup_em"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:fontFamily="@font/gillsans"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#FFF"
        />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:fontFamily="@font/gillsans"
        android:inputType="textEmailAddress"

        />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="SIGN UP"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:fontFamily="@font/gillsansb"
        android:textColor="#2196F3"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_btn_custom"

        />


</LinearLayout>